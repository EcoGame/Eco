  manifest {
    attributes(
	  "Main-Class": "eco/game/Main",
      "Class-Path": "../../lib/lwjgl.jar ../../lib/lwjgl_util.jar ../../lib/slick-util.jar"
	)
  }
}

sourceSets {
    main {
        java {
            srcDirs 'src/'
        }
    }
}

mainClassName = "src/eco/game/Main"
